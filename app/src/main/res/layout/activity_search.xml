<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/menuBar"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:id="@+id/card_room"
            android:layout_width="match_parent"
            android:layout_height="610dp"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            app:contentPadding="16dp"
            tools:openDrawer="start">

            <LinearLayout
                android:id="@+id/room_card_ground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="#80D1D1D1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="100"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="50"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="4dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:text="Choose room type:"
                            app:drawableLeftCompat="@drawable/baseline_bedroom_parent_24" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="8dp"
                            android:background="#80D1D1D1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:layout_marginBottom="4dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            app:drawableLeftCompat="@drawable/ic_event_available_red_24dp"
                            android:text="Choose start date:" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="8dp"
                            android:background="#80D1D1D1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="4dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            app:drawableLeftCompat="@drawable/ic_event_available_red_24dp"
                            android:text=" the number of days:" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="50"
                        android:orientation="vertical">


                        <Spinner
                            android:id="@+id/type_spinner"
                            android:layout_width="194dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"

                            android:layout_marginBottom="4dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="#80D1D1D1" />

                        <Button
                            android:id="@+id/date_picker_actions"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/calibri"
                            android:gravity="center"
                            android:text="14 Jul - 21 Jul"
                            android:textColor="@color/black"
                            style="?android:spinnerStyle"
                             />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="#80D1D1D1" />

                        <EditText
                            android:id="@+id/number_of_days"
                            android:layout_width="180dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/calibri"
                            android:inputType="number"
                            android:gravity="center"
                            android:text="1" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="8dp"
                    android:background="#80D1D1D1" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/search"
                    android:id="@+id/searchB"/>

                <TextView
                    style="@style/modifiedEditText"
                    android:textColor="@color/red"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:id="@+id/errorSearch" />


                <TextView
                    style="@style/modifiedEditText"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:maxLines="2"
                    android:id="@+id/searchMessage" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>



    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:menu="@menu/nav_menu" />

</RelativeLayout>