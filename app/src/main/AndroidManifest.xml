<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />


    <application

        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.ZamiliHotal"
        tools:targetApi="31">


        <activity
            android:name="edu.birzeit.zamilihotal.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
        </activity>


        <activity
            android:name="edu.birzeit.zamilihotal.SplashScreen"
            android:label="@string/app_name"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="edu.birzeit.zamilihotal.activitys.UpdateInfoActivity"
            android:label="update information"/>
        <activity
            android:name="edu.birzeit.zamilihotal.activitys.UpdatePasswordActivity"
            android:label="Update Password" />
        <activity
            android:name="edu.birzeit.zamilihotal.activitys.RoomMenuActivity"
            android:label="Main page" />
        <activity
            android:name="edu.birzeit.zamilihotal.activitys.SearchActivity"
            android:label="Search page" />
        <activity
            android:name="edu.birzeit.zamilihotal.activitys.RoomActivity"
            android:label="Room page" />

        <activity
            android:name="edu.birzeit.zamilihotal.activitys.BookingActivity"
            android:label="Booking Activity" />

        <activity
            android:name="edu.birzeit.zamilihotal.activitys.ProfileActivity"
            android:label="Booking Activity" />
    </application>

</manifest>